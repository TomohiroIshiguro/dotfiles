" Backup files / Undo
set nobackup
set nowritebackup

if has('persistent_undo')
  let undo_path = "$HOME/.vim/undo"
  exe 'set undodir=' .. undo_path
	set undofile
endif

set updatetime=300

" バッファ
set hidden
autocmd BufWritePre * :%s/\s\+$//ge

" Yank / Clipboard
set clipboard+=unnamed

" Indent
set expandtab
set tabstop=2
set shiftwidth=2
set softtabstop=2
set autoindent
set smartindent

let loaded_matchparen = 1

" 変換候補の最大表示数
set pumheight=10

set shortmess+=c
